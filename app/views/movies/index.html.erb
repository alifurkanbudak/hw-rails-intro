<h2>All Movies</h2>

<%#  Part 2: Start here... %>
<%= form_tag movies_path, :method => :get do, :id => :ratings_form %>
  Include:
  <% @all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]", :id => "ratings_#{rating}", :value => "1" %>
  <% end %>
  <%= submit_tag 'Refresh', :class => 'btn btn-primary', :id => :ratings_submit %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
        <%= link_to "Movie Title", root_path(sort: 'title'), :id => 'title_header', :class => @title_class %>
      </th>
      <th>Rating</th>
      <th>
        <%= link_to "Release Date", root_path(sort: 'date'), :id => 'release_date_header', :class => @date_class %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>